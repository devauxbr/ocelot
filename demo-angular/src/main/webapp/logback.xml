<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-1level %logger{24} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="fr.hhdev.ocelot" level="debug"/>

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>